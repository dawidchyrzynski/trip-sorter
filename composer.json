{
    "name": "trip-sorter",
    "require": {
        "php": ">=7.1.0"
    },
    "autoload": {
        "psr-4": {
            "TripSorter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "7.0.2",
        "squizlabs/php_codesniffer": "3.2.3"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs --report=emacs --standard=PSR2 --extensions=php src tests",
            "vendor/bin/phpunit tests"
        ]
    }
}
